<div class="tweet-card">
  <% @tweets.each do |tweet| %>
    <div class="card">
      <div class="stream-item">
        <div class="content">
        <% if user_signed_in? %>
            <%= image_tag current_user.profile_photo, class: "avatar avatar-size48" %>
        <% end %>
          <div class="stream-item-header">
            <div class="user-profile-link">
              <%= link_to "@" + "#{tweet.user.username}", "#", class: "username" %>
            </div>
            <div class="time">
              ãƒ»<%= time_ago_in_words(tweet.created_at) %>
            </div>
          </div>
          <div class="tweet-text">
            <%= safe_join(tweet.text.split("\n"), tag(:br)) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

