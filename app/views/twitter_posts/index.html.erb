<div class="tweet-card">
  <% @twitter_posts.each do |twitter_post| %>
    <div class="card">
      <div class="stream-item">
        <div class="content">
          <div class="stream-item-header">
            <% if user_signed_in? %>
              <%= image_tag current_user.profile_photo, class: "avatar avatar-size48" %>
              <div class="user-profile-link">
                <%= link_to "@" + "#{twitter_post.user.username}", "#", class: "username" %>
              </div>
              <div class="time">
                ãƒ»<%= time_ago_in_words(twitter_post.created_at) %>
              </div>
            <% end %>
          </div>
          <div class="tweet-content">
            <%# <div class="tweet-text"> %>
              <%# <%= safe_join(twitter_post.content.split("\n"), tag(:br)) %>
            <%# </div> %>
            <div class="tweet-img">
              <%= image_tag twitter_post.picture, :width => '200', :height => '100' %>
            </div>
            <div>
              <%= safe_join(twitter_post.content.split("\n"), tag(:br)) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

